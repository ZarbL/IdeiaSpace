{
  "name": "ideiaspace-mission",
  "version": "1.0.0",
  "description": "Plataforma digital de programação em blocos para ensino de conceitos aeroespaciais",
  "main": "src/main/main.js",
  "author": {
    "name": "IdeiaSpace",
    "email": "contato@ideiaspace.com.br"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron-forge start",
    "dev": "electron . --dev --disable-gpu --memory-pressure-off",
    "package": "electron-forge package",
    "make": "node build-prepare-backend.js backup && electron-forge make ; node build-prepare-backend.js restore",
    "publish": "electron-forge publish",
    "lint": "eslint .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "backend:install": "cd backend && npm install",
    "backend:setup": "cd backend && npm run auto-setup",
    "backend:start": "cd backend && npm start",
    "backend:dev": "cd backend && npm run dev",
    "backend:check": "cd backend && node check-prerequisites.js",
    "setup": "npm install && npm run backend:setup",
    "prestart": "npm run backend:check",
    "clean:arduino": "./cleanup-arduino-cli.sh",
    "optimize": "npm run clean:arduino && npm run start",
    "build:prepare": "node build-prepare.js",
    "build:clean": "rimraf out dist build-manifest.json .build-backup-temp",
    "build:windows": "npm run build:prepare && npm run make -- --platform=win32 --arch=x64",
    "build:portable": "npm run build:prepare && electron-builder --win portable",
    "build:validate": "node build-validate.js",
    "prebuild": "npm run build:prepare",
    "postbuild": "echo \"✅ Build concluído! Verifique a pasta 'out' para os instaladores.\"",
    "postmake": "npm run build:validate"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.2.0",
    "@electron-forge/plugin-webpack": "^0.0.2",
    "electron": "^27.0.0",
    "eslint": "^8.0.0",
    "fs-extra": "^11.3.2"
  },
  "dependencies": {
    "blockly": "^10.4.3",
    "electron-squirrel-startup": "^1.0.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "IdeiaSpace Mission",
        "icon": "./src/assets/logo-dark.png",
        "asar": true,
        "overwrite": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "ideiaspace_mission",
            "authors": "IdeiaSpace",
            "description": "Plataforma de programação em blocos para ensino aeroespacial"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "win32"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "maintainer": "IdeiaSpace",
              "homepage": "https://ideiaspace.com.br"
            }
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "options": {
              "maintainer": "IdeiaSpace",
              "homepage": "https://ideiaspace.com.br"
            }
          }
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "ideiaspace",
              "name": "ideiaspace-mission"
            }
          }
        }
      ]
    }
  }
}
