{
  "name": "ideiaspace-backend",
  "version": "1.0.0",
  "description": "Backend para Arduino CLI e comunicação serial do IdeiaSpace",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "install-cli": "node install-arduino-cli.js",
    "install-esp32": "node setup-esp32-core.js",
    "install-libraries": "node setup-libraries.js",
    "setup": "npm install && npm run install-cli && npm run install-esp32 && npm run install-libraries",
    "verify": "node verify-setup.js",
    "auto-setup": "node auto-setup.js",
    "setup-esp32": "node setup-esp32-core.js",
    "test-setup": "node test-setup.js",
    "diagnostic": "node diagnostic.js",
    "esp32-diagnostic": "node esp32-diagnostic.js",
    "esp32-monitor": "node esp32-monitor.js",
    "fix-esp32": "node diagnostic.js && npm run install-cli",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prestart": "node auto-setup.js"
  },
  "keywords": [
    "arduino",
    "cli",
    "serial",
    "websocket",
    "electron",
    "iot"
  ],
  "author": "IdeiaSpace Team",
  "license": "MIT",
  "dependencies": {
    "@serialport/parser-readline": "^13.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-fetch": "^2.7.0",
    "serialport": "^13.0.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
